{{>layout/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">제목</th>
        <th scope="col">내용</th>
    </tr>
    </thead>
    <tbody>
    <!--반복 가능한 객체일 경우, 해당 부분을 반복-->
    {{#article}}
        <tr>
            <th scope="row">{{id}}</th>
            <td>{{title}}</td>
            <td>{{content}}</td>
        </tr>
    {{/article}}
    </tbody>
</table>

<a href="/article/{{article.id}}/edit" class="btn btn-success">수정하기</a>
<a href="/article/{{article.id}}/delete" class="btn btn-danger">삭제하기</a>
<a href="/articles" class="btn btn-secondary">글 목록</a>

{{>comments/_comments}}

{{>layout/footer}}