{{>layout/header}}

<form class="container" action="/article/{{article.id}}/update" method="post">
    <div class="mb-3">
        <label class="form-label">제목</label>
        <input class="form-control" type="text" name="title" value="{{article.title}}"/>
    </div>

    <div class="mb-3">
        <label class="form-label">내용</label>
        <textarea class="form-control" rows="3" name="content">{{article.content}}</textarea>
    </div>

    <button type="submit" class="btn btn-success">완료</button>
    <a href="/article/{{article.id}}">
        <button type="button" class="btn btn-secondary">뒤로 가기</button>
    </a>

</form>
{{>layout/footer}}