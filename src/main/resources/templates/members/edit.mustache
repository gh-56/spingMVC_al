{{>layout/header}}

<form class="container" action="/member/{{member.id}}/update" method="post">
    <div class="mb-3">
        <label class="form-label">이메일</label>
        <input class="form-control" type="text" name="email" value="{{member.email}}"/>
    </div>

    <div class="mb-3">
        <label class="form-label">비밀번호</label>
        <input class="form-control" type="password" name="password" value="{{member.password}}" />
    </div>

    <button type="submit" class="btn btn-success">완료</button>
    <a href="/member/{{member.id}}" class="btn btn-secondary">뒤로가기</a>
</form>

{{>layout/footer}}