
<div class="card m-3" id="comments-new">
    <div class="card-body">
        <!--   댓글 작성 폼     -->
        <form>
            <!--    닉네임        -->
            <div class="mb-3">
                <label for="new-comment-nickname" class="form-label">닉네임</label>
                <input type="text" class="form-control" id="new-comment-nickname" />
            </div>
            <!--    댓글 본문        -->
            <div class="mb-3">
                <label for="new-comment-body" class="form-label">댓글 본문</label>
                <textarea
                        type="text"
                        class="form-control"
                        id="new-comment-body"
                ></textarea>
            </div>
            <!--   숨긴 데이터 : 게시글 id  -->
            <input
                    type="hidden"
                    id="new-comment-article-id"
                    value="{{ article.id }}"
            />
            <!--   제출 버튼     -->
            <button type="button" id="comment-create-btn" class="btn btn-primary">
                댓글 작성
            </button>
        </form>
    </div>
</div>
<script>
    {
      // 댓글 생성 버튼 DOM 변수
      const commentCreateBtn = document.getElementById('comment-create-btn');
      // 이벤트 감지
      commentCreateBtn.addEventListener('click', clickHandler);
      // 이벤트 핸들
      function clickHandler() {
        // JSON 댓글 객체 생성 (CommentDto 포맷)
        const comment = {
          // 게시글 ID 데이터
          articleId: document.getElementById('new-comment-article-id').value,
          // 닉네임 데이터
          nickname: document.getElementById('new-comment-nickname').value,
          // 본문 데이터
          body: document.getElementById('new-comment-body').value,
        };
        console.log(comment);
        // API 통신 - 비동기 통신 fetch() API Controller 호출
        const url = `/api/articles/${comment.articleId}/comments`;
        fetch(url, {
          method: 'POST', // HTTP 메서드 Post 요청
          headers: {
            'Content-Type': 'application/json',
          }, // 헤더 정보, 본문 타입 JSON
          body: JSON.stringify(comment), // comment JSON 객체를 문자열로 변환
        }).then((response) => {
          const msg = response.ok // HTTP 응답코드에 따라 메세지 반환
            ? '성공적으로 댓글이 등록되었습니다.'
            : '등록 실패';
          console.log(msg);
          window.location.reload(); // 페이지 새로고침
        });
      }
    }
</script>